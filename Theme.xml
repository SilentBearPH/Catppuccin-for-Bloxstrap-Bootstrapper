		IgnoreTitleBarInset="True"
		WindowCornerPreference="DoNotRound"
		BorderThickness="0"
		Background="#1e1e2e"
	>

	<TitleBar  
		Title=""
		ShowClose="True"
		ShowMinimize="False"
		Foreground="#cdd6f4"
	/>

	<Image
		Source="theme://Assets/LOGO.gif"
		IsAnimated="True"
		Height="120"
		Width="120"
		HorizontalAlignment="Center"
		Margin="0,45,0,0"
	/>
		
	<Image
		Source="theme://Assets/Catppuccin.png"
		Height="33"
		Width="100"
		Margin="70,184,0,0"
